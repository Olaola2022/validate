{
    "compilerOptions": {
      "target": "es2016",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./",
      "sourceMap": true,
      "lib": ["esnext"],
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "@simple-async-validate": ["./index.ts"]
      }
    }
  }
  